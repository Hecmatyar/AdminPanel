@model IEnumerable<IService.Models.UserModel>
@{
    Layout = null;
}
<table class="table table-striped table-hover table-bordered" id="sample_editable_1">
    <thead>
        <tr><th>Логин</th><th>EMail</th><th>Данные</th><th>Пароль</th><th>Роли</th><th>Удалить</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="center">@Html.DisplayFor(modelItem => item.UserName)</td>
                <td class="center">@Html.DisplayFor(modelItem => item.UserEmail)</td>
                <td>
                    @*@Html.ActionLink("Изменить личные данные", "Edit", new { @class = "edit-popup", Token = item.UserToken })*@
                    @Html.ActionLink("Изменить личные данные", "EditUserPartial", null, new { @class = "edit-popup", iduser = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Сбросить пароль", "ResetPasswordPartial", null, new { @class = "reset-popup", iduser = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Изменить роли", "EditRolePartial", null, new { @class = "role-popup", iduser = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", new { Token = item.UserToken }, new
               {
                   onclick = "return confirm('Пользователь " + item.UserName + " будет удален')"
               })
                </td>
            </tr>
        }
    </tbody>
</table>
