@model test.Areas.Moderator.Models.CategoryViewModel
@using IService.Models
<div class="row">
    @foreach (var categories in Model.Categories)
    {
        <div class="col-md-3 tag">
            <p>@categories.Name</p>
            <div class="form-tag" >
                @using (Html.BeginForm("EditCategory", "Categories", FormMethod.Post,
                        new { @class = "form-horizontal form-row-sepe", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-body">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => categories.Id)                       
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Имя
                            </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => categories.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                }
            </div>
            <hr />
            <div class="action-tag">
                <button type="submit" class="btn blue"><i class="fa fa-edit"></i> Редактировать</button>
                <a class="btn red" onclick="history.go(-1); return false;">Удалить</a><br />
            </div>
        </div>
    }
    <div class="col-md-3 tag">
        <div class="form-tag" style="display:none;">
            @using (Html.BeginForm("EditCategory", "Categories", FormMethod.Post,
                        new { @class = "form-horizontal form-row-sepe", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    @Html.ValidationSummary(true)
                    @*@Html.HiddenFor(model => model.)*@
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            Имя
                        </label>
                        <div class="col-md-10">
                            @*@Html.EditorFor(model => model.Categories, new { htmlAttributes = new { @class = "form-control" } })*@
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />
        <div class="action-tag">
            <button type="submit" class="btn blue"><i class="fa fa-edit"></i> Редактировать</button>
            <a class="btn red" onclick="history.go(-1); return false;">Удалить</a><br />
        </div>
    </div>

</div>
