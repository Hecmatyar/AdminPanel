@model test.Models.Posts
@{
    Layout = null;
}
<div class="control-post">
    <div>
        @using (Html.BeginForm("index", "Home",  new { page = 1, tag = "", category = "", q = Model.q }, FormMethod.Get, new { @class = "form-actions no-color" }))
        {
            <div class="form-actions no-color">
                <p>
                    Поиск по названию поста<br />
                    <input type="text" class="search" name="search" value="@Model.q" />
                    <input type="submit" value="Поиск" class="btn btn-default" /> |
                    @Html.ActionLink(" Все посты", "Index", new { page = 1 })
                </p>
            </div>
        }
        <br />
        <h3>Категории</h3>
        @{Html.RenderAction("CategoryList", "Home");}
        <h3>Тэги</h3>
        @{Html.RenderAction("TagList", "Home");}
    </div>
</div>
